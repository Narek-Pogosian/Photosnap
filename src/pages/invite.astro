---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Invite">
  <div class="page">
    <div class="container">
      <h1>Invite</h1>
      <form autocomplete="off">
        <input type="text" name="firstName" placeholder="First Name" />
        <input type="text" name="lastName" placeholder="Last Name" />
        <input type="email" name="email" placeholder="Email" class="col-2" />
        <input type="text" name="address" placeholder="Address" class="col-2" />
        <button class="btn">Submit</button>
      </form>
    </div>
  </div>
</Layout>

<style lang="scss">
  @use "@sass/abstracts" as *;

  .page {
    background-image: url("/assets/shared/mobile/bg-beta.jpg");
    background-repeat: no-repeat;
    background-size: contain;
    padding-block: 4rem;
    background-color: black;

    @include sm {
      background-image: url("/assets/shared/tablet/bg-beta.jpg");
    }

    @include lg {
      background-image: url("/assets/shared/desktop/bg-beta.jpg");
    }
  }

  h1 {
    color: white;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  form {
    max-width: 500px;
    padding: 3rem 2rem;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    margin-inline: auto;
    display: grid;
    gap: 1.5rem;

    @include sm {
      grid-template-columns: 1fr 1fr;
    }
  }

  input {
    background-color: transparent;
    padding: 0.5rem 0.25rem;
    border: none;
    border-bottom: 3px solid #1a1919;
    outline: none;
    font-size: 1rem;
    transition: all 300ms;

    &::placeholder {
      transition: color 300ms;
      color: #1a1919;
    }

    &:focus {
      border-color: $neutral-200;
    }

    &:focus::placeholder {
      color: $neutral-200;
    }
  }

  .btn {
    @include btn;
    width: 100%;
    margin-top: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (min-width: 580px) {
    .col-2 {
      grid-column: 1/3;
    }

    .btn {
      grid-column: 1/3;
    }
  }
</style>
